	<string>1.0.0</string>
	<key>ParentRecipe</key>
	<string>com.github.hovedkvarteret.download.logioptionsplus</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
