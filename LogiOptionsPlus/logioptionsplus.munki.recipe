		<string>apps/%NAME%</string>
		<key>NAME</key>
		<string>logitech_options_plus</string>
		<key>pkginfo</key>
		<dict>
			<key>catalogs</key>
			<array>
				<string>testing</string>
			</array>
			<key>description</key>
			<string></string>
			<key>developer</key>
			<string>Logitech Inc.</string>
			<key>display_name</key>
			<string>Logitech Options+</string>
			<key>name</key>
